@{
    ViewData["Title"] = "Editar restaurante";
}

@model RestaurantModel

<h2>Editar Restaurante</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <fieldset>
        <label asp-for="NAME">Nome do restaurante:</label>
        <input asp-for="NAME" class="form-control" required />
        <span asp-validation-for="NAME" class="text-danger"></span>
    </fieldset>

    <fieldset>
        <label asp-for="CNPJ">CNPJ do restaurante:</label>
        <input asp-for="CNPJ" class="form-control" required />
        <span asp-validation-for="CNPJ" class="text-danger"></span>
    </fieldset>

    <fieldset>
        <label asp-for="EMAIL">E-mail de acesso:</label>
        <input asp-for="EMAIL" class="form-control" type="email" required />
        <span asp-validation-for="EMAIL" class="text-danger"></span>
    </fieldset>

    <fieldset>
        <label asp-for="PASSWORD">Senha de acesso:</label>
        <input asp-for="PASSWORD" class="form-control" type="password" required />
        <span asp-validation-for="PASSWORD" class="text-danger"></span>
    </fieldset>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Editar restaurante</button>
    </div>
</form>